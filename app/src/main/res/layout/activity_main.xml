<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/home"
    android:background="@drawable/seabg">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/image_h"
        android:src="@drawable/title2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />






    <ImageButton
        android:layout_width="250px"
        android:layout_height="250px"
        android:scaleType = "fitXY"
        android:id="@+id/btn_guide"
        android:src="@drawable/guidebutton"
        android:clickable="true"
        android:background="@null"
        android:layout_alignTop="@+id/btn_book"
        android:layout_alignLeft="@+id/image_h"
        android:layout_alignStart="@+id/image_h" />

    <ImageButton
        android:layout_width="250px"
        android:layout_height="250px"
        android:scaleType = "fitXY"
        android:id="@+id/btn_book"
        android:text="New Button"
        android:src="@drawable/chargelistbutton"
        android:clickable="true"
        android:background="@null"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/image_h"
        android:layout_alignEnd="@+id/image_h"
        android:layout_marginBottom="56dp" />

    <ImageButton
        android:layout_width="250px"
        android:layout_height="250px"
        android:scaleType = "fitXY"
        android:id="@+id/btn_budget"
        android:src="@drawable/budgetbutton"
        android:clickable="true"
        android:background="@null"
        android:layout_alignTop="@+id/btn_book"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@drawable/whale2"
        android:clickable="true"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/defaultplan"
    android:id="@+id/budgetview"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="30dp"
    android:layout_alignRight="@+id/image_h"
    android:layout_alignEnd="@+id/image_h"
    android:layout_below="@+id/image_h"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:gravity="center"
    android:background="@drawable/round_corners"
    android:textColor="#000080"
    android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultduration"
        android:id="@+id/durationview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="5dp"
        android:layout_alignLeft="@+id/image_h"
        android:layout_alignRight="@+id/image_h"
        android:layout_alignEnd="@+id/image_h"
        android:layout_alignBottom="@id/budgetview"
        android:gravity="center"
        android:background="@drawable/round_corners" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whaledialog"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_alignRight="@+id/image_h"
        android:layout_alignEnd="@+id/image_h"
        android:layout_below="@+id/image_h"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="@drawable/round_corners"
        android:alpha="0"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/budgetview" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/triangle"
        android:layout_alignRight="@id/durationview"
        android:layout_marginRight="70dp"
        android:layout_below="@id/durationview"
        android:id="@+id/imageView2" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:progressDrawable="@drawable/progress_bar_horizontal_1"
        android:progress="0"
        android:secondaryProgress="0"
        android:max="100"
        android:id="@+id/progressBar"
        android:layout_above="@+id/remainview"
        android:layout_alignLeft="@+id/budgetview"
        android:layout_alignStart="@+id/budgetview"
        android:layout_alignRight="@+id/budgetview"
        android:layout_alignEnd="@+id/budgetview" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:id="@+id/remainview"
        android:layout_above="@+id/btn_guide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00BFFF" />



</RelativeLayout>